{
  "name": "wpbones/wpkirk",
  "type": "wordpress-plugin",
  "description": "A WP Bones Database Boilerplate WordPress plugin",
  "keywords": [
    "wordpress"
  ],
  "homepage": "https://wpbones.com/",
  "license": "GPL-3.0",
  "authors": [
    {
      "name": "Giovambattista Fazioli",
      "email": "wpbones.info@gmail.com",
      "homepage": "https://wpbones.com/"
    }
  ],
  "support": {
    "issues": "https://github.com/wpbones/WPKirk/issues",
    "source": "https://github.com/wpbones/WPKirk/"
  },
  "require": {
    "php": ">=8.2",
    "wpbones/wpbones": "~1.7",
    "wpbones/wpkirk-helpers": "~1.0",
    "illuminate/database": "~11.0"
  },
  "autoload": {
    "psr-4": {
      "WPKirk\\": "plugin/"
    },
    "files": [
      "functions.php"
    ]
  },
  "scripts": {
    "post-autoload-dump": [
      "php -r \"copy('vendor/wpbones/wpbones/src/Console/bin/bones', 'bones');\"",
      "php bones rename --update"
    ]
  }
}